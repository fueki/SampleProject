<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:paddingTop="@dimen/mergin_default_value"
		android:paddingBottom="@dimen/mergin_default_value"
		android:paddingLeft="@dimen/mergin_default_value"
		android:paddingRight="@dimen/mergin_default_value"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/player_back"
		android:id="@+id/linearLayout1">
		<ImageButton
			android:id="@+id/button_close"
			android:layout_gravity="right"
			style="@style/PlayerButton.Close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                android:layout_weight="1"
                    android:id="@+id/text_time_now"
                    android:layout_margin="8dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/text_time_left"
                    android:layout_gravity="left"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>



		<SeekBar
			android:id="@+id/seek_bar_play"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</SeekBar>

		<LinearLayout
			android:id="@+id/LinearLayout01"
			android:layout_gravity="bottom|right"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center">

			<ImageButton
				android:id="@+id/button_play"
				style="@style/PlayerButton.Play"
				android:layout_gravity="right"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<ImageButton
				android:id="@+id/button_rew"
				style="@style/PlayerButton.Rew"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/button_ff"
                                android:layout_gravity="left"
                
                style="@style/PlayerButton.FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                                android:layout_gravity="left"
                android:layout_weight="1"
                
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


		</LinearLayout>
	</LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/footer_button_height_size"
        >
    </View>

</LinearLayout>
